{
  "version": 2,
  "builds": [
    { "src": "dist/screenshot/**", "use": "@now/static" },
    {
      "src": "/api/index.js",
      "use": "@now/node",
      "config": { "maxLambdaSize": "40mb" }
    }
  ],
  "routes": [
    { "src": "/", "dest": "/dist/screenshot/index.html" },
    { "src": "/(.*)", "dest": "/dist/screenshot/$1" },
    { "src": "/api/", "methods": ["POST"], "dest": "/api/index.js" }
  ]
}
